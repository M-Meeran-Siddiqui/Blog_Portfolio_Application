<h1>Create a new Portfolio Item</h1>

<%= form_for(@portfolio) do |f|%>

<div class="field">
   <%= f.label :title %>
   <%= f.text_field :title %>
</div>
<div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
</div>
<div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
</div>

<%# below ul is for filling the all technologies at once . and remember this -> :technologies should be same as available inside the portfolio.rb written. %>
<ul>
    <%= f.fields_for :technologies do |technology_form|%>
    <li>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
    </li>
    <% end %>
</ul>

<div class="actions">
    <%= f.submit "Create Portfolio Item"%>
</div>
<%end%>