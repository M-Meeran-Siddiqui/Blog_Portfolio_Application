<p style="color: green"><%= notice %></p>

<%= link_to 'New Blog', new_blog_path %>
<h1>Blogs</h1>

<table style="border: 1px solid black; width: 100%">
  <thead style="background-color: #f2f2f2 ; border-bottom: 2px solid black;" >
    <tr>
      <th>Blog Title</th>
      <th>Body</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>
  <tbody>
     <% @blogs.each do |blog|%>
      <tr style="border-bottom: 1px solid black; background-color: #d8d8d8ff;">
        <td><%= blog.title %> </td>
        <td><%= blog.body %></td>
        <td><%= link_to blog.status , toggle_status_blog_path(blog) %></td>
        <td><%= link_to 'Show' , blog %></td>
        <td><%= link_to 'Edit' , edit_blog_path(blog)%></td>
        <td><%= button_to 'Delete Post' , blog , method: :delete, data: {confirm: "Are you sure ?"}%></td>
      </tr>
     <%end%>
  </tbody>
</table>

<br>